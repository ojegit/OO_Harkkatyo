<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/ivLeftBattle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_lutemon" />

    <TextView
        android:id="@+id/tvLeftBattle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivLeftBattle"
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/tvTimeStampLeftBattle"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:text="TextView"
        android:textSize="8dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/tvLeftBattle"
        app:layout_constraintLeft_toRightOf="@+id/ivLeftBattle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="38dp" />
</androidx.constraintlayout.widget.ConstraintLayout>